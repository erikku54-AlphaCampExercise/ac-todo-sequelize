
{{!-- 訊息樣板 --}}

{{#if success_msg}}

<div class="toast align-items-center mb-3" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="d-flex">
    <div class="toast-body">
      <i class="fa-solid fa-circle-check"></i>
      {{success_msg}}
    </div>
    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>

{{/if}}

{{#if warning_msg}}

<div class="toast align-items-center mb-3" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="d-flex">
    <div class="toast-body">
      <i class="fa-solid fa-triangle-exclamation"></i>
     {{warning_msg}}
    </div>
    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>

{{/if}}

{{#each errors}}

<div class="toast align-items-center mb-3" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="d-flex">
    <div class="toast-body">
      <i class="fa-solid fa-triangle-exclamation"></i>
     {{ this.message }}
    </div>
    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>

{{/each}}

<script>

  // toast必須先初始化

  document.addEventListener("DOMContentLoaded", function(){
    let toastList =document.querySelectorAll('.toast'); //select id of toast

    toastList.forEach(toast => {
      let bsToast = new bootstrap.Toast(toast); //inizialize it
      bsToast.show(); //show it
    })
  } );  

</script>